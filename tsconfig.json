{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "target": "ES2022",
  },
  "include": [
    "src/**/*"
  ],
}